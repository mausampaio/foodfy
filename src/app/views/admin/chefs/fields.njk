<div class="fields">
    <div class="item">
        <div class="title">Nome</div>
        <div>
            <input type="text" name="name" value="{{chef.name}}">
        </div>
    </div>

    <div class="item">
        <div class="title">Avatar</div>
        <div>
            <div id="avatar-upload">
                <div id="avatar-preview">
                    {% if avatar == null %}
                        <img src="http://placehold.it/500x500?text=CHEF SEM FOTO">
                    {% else %}
                        <img id="{{avatar.id}}" src="{{avatar.src}}" alt="{{avatar.name}}">
                    {% endif %}
                    <input type="hidden" name="removed_files">
                </div>
                <input id="avatar-input" type="file" name="avatar" onchange="AvatarUpload.handleAvatarInput(event)">
                <label class="button" for="avatar-input">
                    Enviar Avatar
                </label>
            </div>
        </div>
    </div>
</div>