{% extends "./layout.njk" %}

{% block head %}
    <title>Esqueceu a senha?</title>
{% endblock %}

{% block content %}
    <form method="POST" action="/admin/users/forgot-password">
        <div class="login-title">
            <h1>Esqueceu a senha?</h1>
        </div>

        <div class="login-fields">
            <div class="item">
                <div class="title">E-mail</div>
                <div class="input">
                    <input type="email" name="email" value="{{user.email}}" placeholder="Digite o email" onblur="Validate.apply(this, 'isEmail')">
                </div>
            </div>
        </div>
        <div class="recovery footer">
            <button type="submit" class="button">Recuperar</button>
        </div>
    </form>
{% endblock content %}