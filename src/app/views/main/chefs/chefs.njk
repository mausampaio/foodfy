{% extends "main/layout.njk" %}

{% block head %}
    <title>Chefs</title>
{% endblock head %}

{% block content %}
    <section class="chefs-cards">
        {% for chef in chefs %}
            <div class="chef-card-main" id="{{chef.id}}">
                <div class="avatar">
                    {% if avatar == null %}
                        <img src="http://placehold.it/500x500?text=CHEF SEM FOTO">
                    {% else %}
                        <img src="{{avatar.src}}" alt="{{avatar.name}}">
                    {% endif %}
                </div>
                <div class="recipes-card-content">
                    <div class="recipes-card-title">
                        <p>{{chef.name}}</p>
                    </div>
                    <div class="chef-card-total">
                        <p>{{chef.total_recipes}} receitas</p>
                    </div>
                </div>
            </div>
        {% endfor %}
    </section>
{% endblock content %}