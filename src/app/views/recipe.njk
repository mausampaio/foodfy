<section class="recipe">
            <div>
                <div class="card-image-container">
                    <img src="{{recipe.image}}" alt="Imagem Receita">
                </div>
                <div class="recipe-title">
                    <p>{{recipe.title}}</p>
                </div>
                <div class="recipe-author">
                    <p>por {{recipe.chef_name}}</p>
                </div>
                <div class="recipe-info">
                    <h3>Ingredientes</h3>
                    <span class="toggle-ingredients">ESCONDER</span>
                    <div id="ingredients">
                        <ul>
                        {% for ingredients in recipe.ingredients %}
                            <li>{{ingredients}}</li>
                        {% endfor %}
                        </ul>
                    </div>
                </div>
                <div class="recipe-info">
                    <h3>Preparação</h3>
                    <span class="toggle-preparation">ESCONDER</span>
                    <div id="preparation">
                        <ul>
                        {% for preparation in recipe.preparation %}
                            <li>{{preparation}}</li>
                        {% endfor %}
                        </ul>
                    </div>
                </div>
                <div class="recipe-info">
                    <h3>Informações adicionais</h3>
                    <span class="toggle-info">ESCONDER</span>
                    <div id="info">
                        <p>{{recipe.information}}</p>
                    </div>
                </div>
            </div>
</section>